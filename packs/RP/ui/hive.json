{
  "namespace": "shop",
  "base@shop.background": {
    "type": "image",
    "$stripe_texture|default": "textures/ui/menu/red_stripe",
    "$panel_size|default": [250, 250],
    "size": "$panel_size",
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "stripe@shop.background": {
          "texture": "$stripe_texture",
          "size": ["100%", "10px"],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "layer": 2
        }
      },
      {
        "title@shop.title_label": {
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [0, "-2px"]
        }
      },
      {
        "close_button@common.close_button": {
          "anchor_from": "top_right",
          "anchor_to": "top_right"
        }
      },
      {
        "panel@shop.scrolling_content": {
          "offset": [0, "20px"],
          "size": ["100%", "100%"]
        }
      }
    ]
  },
  "background": {
    "layer": 0,
    "type": "image",
    "texture": "textures/ui/Black",
    "size": ["100%", "100%"]
  },
  "title_label": {
    "$text_name|default": "#title_text",
    "type": "label",
    "size": ["default", 10],
    "text": "$text_name",
    "font_type": "MinecraftTen",
    "layer": 4,
    "shadow": false,
    "property_bag": {
      "#tts_dialog_title": "$text_name"
    },
    "bindings": [
      {
        "binding_name": "$text_name",
        "binding_name_override": "$text_name"
      },
      {
        "binding_type": "global",
        "binding_condition": "once",
        "binding_name": "#tts_dialog_title"
      }
    ]
  },
  "long_form_panel": {
    "type": "stack_panel",
    "size": ["100%", "100%"],
    "orientation": "vertical",
    "layer": 1,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      // {
      //   "scrolling_panel@common.scrolling_panel": {
      //     "anchor_to": "center",
      //     "anchor_from": "center",
      //     "$show_background": true,
      //     "size": ["100%", "100%"],
      //     "$scrolling_content": "shop.scrolling_content",
      //     "$scroll_size": [5, "100% - 4px"],
      //     "$scrolling_pane_size": ["100% - 4px", "100% - 2px"],
      //     "$scrolling_pane_offset": [2, 0],
      //     "$scroll_bar_right_padding_size": [0, 0]
      //   }
      // }
      {
        "panel@shop.scrolling_content": {}
      }
    ]
  },
  "scrolling_content": {
    "type": "stack_panel",

    "size": ["90%", "100%"],

    "orientation": "horizontal",

    "anchor_from": "top_left",

    "anchor_to": "top_left",

    "collection_name": "form_buttons",

    "controls": [
      {
        "offset_button@shop.custom_button": {
          "$icon_size": [69, 69],

          "$button_size": [133, 133],

          "$padding": [153, 153],

          "collection_index": 0
        }
      },

      {
        "right_side_stack": {
          "type": "stack_panel",

          "size": ["100%", "100%"],

          "orientation": "vertical",

          "anchor_from": "center",

          "anchor_to": "center",

          "collection_name": "form_buttons",

          "controls": [
            {
              "offset_button@shop.custom_button": {
                "$button_size": [138, 55],

                "$padding": [148, 76.5],

                "collection_index": 1
              }
            },

            {
              "bottom_right_stack": {
                "type": "stack_panel",

                "size": ["100%", "100%"],

                "orientation": "horizontal",

                "anchor_from": "center",

                "anchor_to": "center",

                "collection_name": "form_buttons",

                "controls": [
                  {
                    "offset_button@shop.custom_button": {
                      "$button_size": [64, 64],

                      "$padding": [74, 69],

                      "collection_index": 2
                    }
                  },

                  {
                    "offset_button@shop.custom_button": {
                      "$button_size": [64, 64],

                      "$padding": [74, 69],

                      "collection_index": 3
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "custom_button": {
    "$padding|default": [80, 80],

    "$button_size|default": [64, 64],

    "$icon_size|default": [32, 32],

    "type": "panel",

    "size": "$padding",

    "controls": [
      {
        "main_ui": {
          "type": "panel",

          "size": "$button_size",

          "controls": [
            {
              "panel_name": {
                "type": "panel",

                "size": "$button_size",

                "bindings": [
                  {
                    "binding_type": "view",

                    "source_control_name": "image",

                    "resolve_sibling_scope": true,

                    "source_property_name": "(not (#texture = ''))",

                    "target_property_name": "#visible"
                  }
                ],

                "controls": [
                  {
                    "image": {
                      "type": "image",

                      "layer": 200,

                      "size": "$icon_size",

                      "offset": [0, -5],

                      "bindings": [
                        {
                          "binding_name": "#form_button_texture",

                          "binding_name_override": "#texture",

                          "binding_type": "collection",

                          "binding_collection_name": "form_buttons"
                        },

                        {
                          "binding_name": "#form_button_texture_file_system",

                          "binding_name_override": "#texture_file_system",

                          "binding_type": "collection",

                          "binding_collection_name": "form_buttons"
                        },

                        {
                          "binding_type": "view",

                          "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",

                          "target_property_name": "#visible"
                        }
                      ]
                    }
                  },

                  {
                    "text": {
                      "type": "label",

                      "text": "#form_button_text",

                      "layer": 32,

                      "color": [0, 0, 0],

                      "offset": [0, -8],

                      "anchor_from": "bottom_middle",

                      "bindings": [
                        {
                          "binding_name": "#form_button_text",

                          "binding_type": "collection",

                          "binding_collection_name": "form_buttons"
                        }
                      ]
                    }
                  }
                ]
              }
            },

            {
              "form_button@common_buttons.light_text_button": {
                "$pressed_button_name": "button.form_button_click",

                "anchor_from": "top_left",

                "anchor_to": "top_left",

                "size": "$button_size",

                "$button_text": "#null",

                "$button_text_binding_type": "collection",

                "$button_text_grid_collection_name": "form_buttons",

                "$button_text_max_size": ["100%", 20],

                "bindings": [
                  {
                    "binding_type": "collection_details",

                    "binding_collection_name": "form_buttons"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
